{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Infrastructure Flow Process Schema",
  "description": "Schema for defining business process flows through infrastructure components",
  "type": "object",
  "required": ["process_name", "nodes", "flows"],
  "properties": {
    "process_name": {
      "type": "string",
      "description": "Name of the business process being visualized"
    },
    "description": {
      "type": "string",
      "description": "Optional description of the process"
    },
    "nodes": {
      "type": "array",
      "description": "Infrastructure components/services in the flow",
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the node"
          },
          "label": {
            "type": "string",
            "description": "Display label for the node"
          },
          "position": {
            "type": "array",
            "items": [
              {"type": "number"},
              {"type": "number"}
            ],
            "description": "X,Y coordinates on the canvas (optional)"
          },
          "color": {
            "type": "string",
            "description": "Hex color code for the node (optional, default: #3498db)"
          },
          "shape": {
            "type": "string",
            "enum": ["circle", "square", "rectangle"],
            "description": "Shape of the node (optional, default: circle)"
          }
        }
      }
    },
    "flows": {
      "type": "array",
      "description": "Data flows between nodes",
      "items": {
        "type": "object",
        "required": ["source", "destination"],
        "properties": {
          "source": {
            "type": "string",
            "description": "ID of the source node"
          },
          "destination": {
            "type": "string",
            "description": "ID of the destination node"
          },
          "label": {
            "type": "string",
            "description": "Label for the flow (optional)"
          },
          "color": {
            "type": "string",
            "description": "Hex color code for the flow (optional, default: #2ecc71)"
          },
          "pulse_rate": {
            "type": "number",
            "description": "Animation pulse rate in Hz (optional, default: 1)"
          }
        }
      }
    }
  }
}
